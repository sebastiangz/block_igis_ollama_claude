{{!
    @template block_igis_ollama_claude/chat

    Template for the multi-provider AI chat interface

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-instance-id

    Context variables required for this template:
    * blocktitle The title of the block
    * assistant_name The name of the assistant
    * user_name The name of the user
    * showlabels Whether to show the labels
    * instanceid Block instance ID
    * contextid Context ID
    * uniqid Unique ID for DOM elements
    * logging Whether logging is enabled
    * allowapiselection Whether to allow API selection
    * defaultapi The default API service to use
    * ollamaapiavailable Whether Ollama API is available
    * claudeapiavailable Whether Claude API is available
    * openaiapiavailable Whether OpenAI API is available
    * geminiapiavailable Whether Gemini API is available
}}

<div class="block_igis_ollama_claude" data-instance-id="{{instanceid}}">
    <div id="igis_ollama_chat_log">
        <div class="igis_ollama_message assistant">
            <span>{{# str }} welcomemessage, block_igis_ollama_claude, { "name": "{{assistant_name}}" } {{/ str }}</span>
        </div>
    </div>

    {{#logging}}
    <div class="igis_ollama_logging_notice">
        <i class="fa fa-record-vinyl" aria-hidden="true"></i>
        {{# str }} chatbeingrecorded, block_igis_ollama_claude {{/ str }}
    </div>
    {{/logging}}

    <div id="control_bar">
        <button id="refresh" class="igis_ollama_refresh_btn" title="{{# str }} clearconversation, block_igis_ollama_claude {{/ str }}">
            <i class="fa fa-trash-alt" aria-hidden="true"></i>
            {{# str }} clearconversation, block_igis_ollama_claude {{/ str }}
        </button>
        
        {{#allowapiselection}}
        <div class="igis_ollama_api_selector">
            <label for="api_selector">{{# str }} selectapi, block_igis_ollama_claude {{/ str }}</label>
            <select id="api_selector" class="form-control">
                {{#ollamaapiavailable}}
                <option value="ollama" {{#defaultapi_ollama}}selected{{/defaultapi_ollama}}>{{# str }} ollamaapi, block_igis_ollama_claude {{/ str }}</option>
                {{/ollamaapiavailable}}
                {{#claudeapiavailable}}
                <option value="claude" {{#defaultapi_claude}}selected{{/defaultapi_claude}}>{{# str }} claudeapi, block_igis_ollama_claude {{/ str }}</option>
                {{/claudeapiavailable}}
                {{#openaiapiavailable}}
                <option value="openai" {{#defaultapi_openai}}selected{{/defaultapi_openai}}>{{# str }} openaiapi, block_igis_ollama_claude {{/ str }}</option>
                {{/openaiapiavailable}}
                {{#geminiapiavailable}}
                <option value="gemini" {{#defaultapi_gemini}}selected{{/defaultapi_gemini}}>{{# str }} geminiapi, block_igis_ollama_claude {{/ str }}</option>
                {{/geminiapiavailable}}
            </select>
        </div>
        {{/allowapiselection}}
    </div>
    
    <div class="igis_ollama_input_bar">
        <textarea id="igis_ollama_input" class="form-control" rows="2" placeholder="{{# str }} typemessage, block_igis_ollama_claude {{/ str }}"></textarea>
        <button id="go" class="btn btn-primary">
            <i class="fa fa-paper-plane" aria-hidden="true"></i>
            {{# str }} sendmessage, block_igis_ollama_claude {{/ str }}
        </button>
    </div>

    {{! Hidden fields for JS usage }}
    <input type="hidden" id="igis_ollama_instance_id" value="{{instanceid}}">
    <input type="hidden" id="igis_ollama_context_id" value="{{contextid}}">
    <input type="hidden" id="igis_ollama_assistant_name" value="{{assistant_name}}">
    <input type="hidden" id="igis_ollama_user_name" value="{{user_name}}">
    <input type="hidden" id="igis_ollama_show_labels" value="{{showlabels}}">
    <input type="hidden" id="igis_ollama_source_of_truth" value="{{sourceoftruth}}">
    <input type="hidden" id="igis_ollama_custom_prompt" value="{{customprompt}}">
    <input type="hidden" id="igis_ollama_default_api" value="{{defaultapi}}">

    <style>
        .block_igis_ollama_claude {
            position: relative;
            display: flex;
            flex-direction: column;
            height: 400px;
            border: 1px solid #ddd;
            border-radius: 5px;
            overflow: hidden;
            padding: 10px;
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        #igis_ollama_chat_log {
            flex-grow: 1;
            overflow-y: auto;
            margin-bottom: 10px;
            padding: 5px;
        }

        .igis_ollama_message {
            position: relative;
            margin-bottom: 10px;
            padding: 8px 12px;
            border-radius: 10px;
            max-width: 80%;
            word-break: break-word;
            line-height: 1.4;
        }

        .igis_ollama_message.user {
            background-color: #dcf8c6;
            margin-left: auto;
            text-align: right;
        }

        .igis_ollama_message.assistant {
            background-color: #fff;
            border: 1px solid #e0e0e0;
            margin-right: auto;
        }

        .igis_ollama_message.error {
            background-color: #ffebee;
            border: 1px solid #ffcdd2;
            color: #c62828;
        }

        .igis_ollama_message.loading {
            animation: igis_ollama_pulse 1.5s infinite;
        }

        @keyframes igis_ollama_pulse {
            0% { opacity: 1; }
            50% { opacity: 0.5; }
            100% { opacity: 1; }
        }

        #control_bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        #control_bar.disabled {
            opacity: 0.5;
            pointer-events: none;
        }

        .igis_ollama_refresh_btn {
            padding: 5px 10px;
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
            border-radius: 4px;
            cursor: pointer;
        }

        .igis_ollama_api_selector {
            display: flex;
            align-items: center;
        }

        .igis_ollama_api_selector label {
            margin-right: 5px;
            margin-bottom: 0;
        }

        .igis_ollama_input_bar {
            display: flex;
            margin-top: 5px;
        }

        #igis_ollama_input {
            flex-grow: 1;
            padding: 8px;
            border: 1px solid #ced4da;
            border-radius: 4px 0 0 4px;
            resize: none;
        }

        #igis_ollama_input.error {
            border-color: #dc3545;
            background-color: #fff8f8;
        }

        #go {
            border-radius: 0 4px 4px 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        #go i {
            margin-right: 5px;
        }

        .igis_ollama_logging_notice {
            background-color: #fff3cd;
            color: #856404;
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 0.85em;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }

        .igis_ollama_logging_notice i {
            margin-right: 5px;
            color: #dc3545;
        }
    </style>
</div>